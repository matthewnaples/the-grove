{
  "name": "the-grove",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:playground": "turbo run dev --filter=@the-grove/playground",
    "dev:link": "./scripts/dev-link.sh",
    "dev:unlink": "./scripts/dev-unlink.sh",
    "build": "turbo run build",
    "generate:registry": "turbo run generate --filter=@the-grove/registry",
    "validate:registry": "turbo run validate --filter=@the-grove/registry",
    "publish:all": "./scripts/publish.sh"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "@types/node": "^20.0.0"
  }
}
